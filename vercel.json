{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "buildCommand": "npx vite build && npx esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  }
}